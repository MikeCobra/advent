#!/usr/bin/env ruby

require_relative '../lib/floor_route'

if ARGV.length != 1
  puts 'Usage: interpret \'<instructions>\''
  exit 1
end

route = FloorRoute.new ARGV[0]

if route.first_basement == nil
  puts "Santa will end on floor #{route.final_floor} and will not enter the basement."
else
  puts "Santa will end on floor #{route.final_floor} and will enter the basement on step #{route.first_basement}"
end
